<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alignmentMode="alignMargins"
    android:columnCount="2"
    android:layout_centerInParent="true"
    android:layout_centerHorizontal="true"
    android:padding="46dp"
    android:rowCount="4"
    android:useDefaultMargins="true">
    <TextView android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:text="Precios"
        android:textSize="28dp"
        />
    <Button android:id="@+id/free"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_row="1"
        android:layout_column="0"
        android:backgroundTint="#277A86F3"
        android:text="Gratis"
        android:textSize="28dp"/>

    <Button android:id="@+id/priceRange1"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_row="1"
        android:layout_column="1"
        android:backgroundTint="#277A86F3"
        android:text="$1-$50"
        android:textSize="28dp"/>

    <Button android:id="@+id/priceRange2"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_row="2"
        android:layout_column="0"
        android:backgroundTint="#277A86F3"
        android:text="$51 - $100"
        android:textSize="24dp"/>

    <Button android:id="@+id/priceRange3"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_row="2"
        android:layout_column="1"
        android:backgroundTint="#277A86F3"
        android:text="$101 - $150"
        android:textSize="24dp"/>

    <Button android:id="@+id/priceRange4"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_row="3"
        android:layout_column="0"
        android:backgroundTint="#277A86F3"
        android:text="$151 - $200"
        android:textSize="24dp"/>

    <Button android:id="@+id/priceRange5"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_row="3"
        android:layout_column="1"
        android:backgroundTint="#277A86F3"
        android:text="Mas de $200"
        android:textSize="24dp"/>
    <Button android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar"
        />
</GridLayout>
